<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start|top"
    android:orientation="vertical"
    android:padding="12dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="128dp"
        android:layout_height="190dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contest_thumbnail"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/all_about_photos" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_toStartOf="@+id/chevron_right"
          android:orientation="vertical"
          android:padding="5dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="6sp"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            tools:text="@tools:sample/lorem[10]" />

        <RatingBar
            android:id="@+id/star"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Category"
            android:textColor="#3F51B5" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Entry Fee"
            android:textColor="#3F51B5" />

        <TextView
            android:id="@+id/entryFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="120930"/>

      </LinearLayout>

      <ImageView
          android:id="@+id/chevron_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="0dp"
          android:contentDescription="@string/chevron_icon"
          android:src="@drawable/chevron_right" />
    </RelativeLayout>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="20dp"
      android:background="#E4E4E4" />


</LinearLayout>